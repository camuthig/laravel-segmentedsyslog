{
    "name": "camuthig/laravel-segmentedsyslog",
    "description": "A Laravel Syslog Handler to handle maximum message lengths enforced by certain syslog implementations.",
    "authors": [
        {
            "name": "Chris Muthig",
            "email": "camuthig@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "4.2.*",
        "monolog/monolog": "~1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.9.*"
    },
    "autoload": {
        "classmap": [
        ],
        "psr-0": {
            "Camuthig\\SegmentedSyslog\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
             "tests"
        ]
    },
    "minimum-stability": "stable"
}
